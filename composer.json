{
    "name": "gbln/gbln",
    "description": "GBLN (Goblin Bounded Lean Notation) - LLM-native serialisation format with parse-time type validation",
    "type": "library",
    "keywords": [
        "gbln",
        "serialisation",
        "parser",
        "llm",
        "type-safe",
        "data-format"
    ],
    "homepage": "https://gbln.dev",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Vivian Burkhard Voss",
            "email": "ask@vvoss.dev"
        }
    ],
    "support": {
        "issues": "https://github.com/gbln-org/gbln-php/issues",
        "source": "https://github.com/gbln-org/gbln-php"
    },
    "require": {
        "php": ">=7.4",
        "ext-ffi": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0|^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "ext-xz": "Required for XZ compression support (.gbln.xz files)"
    },
    "autoload": {
        "psr-4": {
            "GBLN\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GBLN\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
